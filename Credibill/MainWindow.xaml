<Window x:Class="CrediBill_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrediBill - Home" Height="600" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#f0f0f5">
    <Grid>
      
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="200" Background="#2C3E50">
                <TextBlock Text="CrediBill" Foreground="White" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="10"/>
                <Button Content="Customer Management" Click="NavigateToCustomerView"
                        Background="#34495E" Foreground="White" Margin="10" Height="40" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="Invoice Management" Click="NavigateToInvoiceView"
                        Background="#34495E" Foreground="White" Margin="10" Height="40" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="Payment Management" Click="NavigateToPaymentView"
                        Background="#34495E" Foreground="White" Margin="10" Height="40" Style="{StaticResource MenuButtonStyle}" />
            </StackPanel>

           
            <Grid>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="White" Margin="10"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>