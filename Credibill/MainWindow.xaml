<Window x:Class="CrediBill_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CrediBill_WPF"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
                <Button Content="Customer View" Width="120" Margin="5" Click="NavigateToCustomerView" />
                <Button Content="Invoice View" Width="120" Margin="5" Click="NavigateToInvoiceView" />
                <Button Content="Payment View" Width="120" Margin="5" Click="NavigateToPaymentView" />
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>