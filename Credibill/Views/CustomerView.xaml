<Window x:Class="Credibill_WPF.Views.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CrediBill_WPF.ViewModels"
        Title="Customer Management" Height="450" Width="800">

    <!-- Définition du DataContext pour lier la vue au ViewModel -->

    <Grid>
        <!-- Titre de la fenêtre -->
        <TextBlock Text="Customer Management" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

        <!-- Liste des clients -->
        <ListView Name="CustomerListView" 
                  ItemsSource="{Binding Customers}" 
                  SelectedItem="{Binding SelectedCustomer}" 
                  DisplayMemberPath="Name" 
                  Margin="10,50,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Customer Name" 
                                    DisplayMemberBinding="{Binding Name}" 
                                    Width="200"/>
                    <GridViewColumn Header="Email" 
                                    DisplayMemberBinding="{Binding Email}" 
                                    Width="250"/>
                    <GridViewColumn Header="Address" 
                                    DisplayMemberBinding="{Binding Address}" 
                                    Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Détails du client sélectionné -->
        <StackPanel Orientation="Vertical" Margin="10,200,10,10">
            <TextBox Text="{Binding SelectedCustomer.Name}" 
                     Width="200" Margin="5"/>
            <TextBox Text="{Binding SelectedCustomer.Email}" 
                     Width="200" Margin="5"/>
            <TextBox Text="{Binding SelectedCustomer.Address}" 
                     Width="200" Margin="5"/>
        </StackPanel>

        <!-- Commandes pour enregistrer, mettre à jour ou supprimer -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10,250,10,10">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Width="80" Margin="5" Height="60"/>
            <Button Content="Update" 
                    Command="{Binding UpdateCommand}" 
                    Width="80" Margin="5" Height="60"/>
            <Button Content="Delete" 
                    Command="{Binding DeleteCommand}" 
                    Width="80" Margin="5" Height="60"/>
        </StackPanel>
    </Grid>
</Window>
