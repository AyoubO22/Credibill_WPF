<Window x:Class="Credibill_WPF.InvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Management" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Invoice Management" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

        <ListView Name="InvoiceListView" ItemsSource="{Binding Invoices}"
                  SelectedItem="{Binding SelectedInvoice}" DisplayMemberPath="Amount" Margin="10,50,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="150"/>
                    <GridViewColumn Header="Issue Date" DisplayMemberBinding="{Binding IssueDate}" Width="150"/>
                    <GridViewColumn Header="Customer" DisplayMemberBinding="{Binding Customer.Name}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Vertical" Margin="10,200,10,10">
            <TextBox Text="{Binding SelectedInvoice.Amount}" Width="200" Margin="5"/>
            <DatePicker SelectedDate="{Binding SelectedInvoice.IssueDate}" Width="200" Margin="5"/>
            <ComboBox SelectedItem="{Binding SelectedInvoice.Customer}"
                      ItemsSource="{Binding Customers}"
                      DisplayMemberPath="Name" Width="200" Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,250,10,10">
            <Button Content="Save" Command="{Binding SaveInvoiceCommand}" Width="80" Margin="5"/>
            <Button Content="Update" Command="{Binding UpdateInvoiceCommand}" Width="80" Margin="5"/>
            <Button Content="Delete" Command="{Binding DeleteInvoiceCommand}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>